<script src="/socket.io/socket.io.js"></script>
<script type="text/javascript">
var socket = io.connect('http://<%= host %>');
var brightness = [];

for (var i = 0; i < <%= num_led%> ; i++) {
  brightness[i] = 0;
}

socket.on('connect', function(msg) {
  console.log('connect');
  tlc5940_update();
});

function menu_display_update() {
  var id = document.querySelector('input[name="tlc5940.disp.sel"]:checked').value;
  var contents = document.getElementsByClassName('tlc5940.disp');
	console.log(contents);
  for (var i = 0; i < contents.length; i++) {
    if (contents[i].id == id) {
      contents[i].style.display = "block";
    } else {
      contents[i].style.display = "none";
    }
  }
}

var menu_radios = document.getElementsByName("tlc5940.disp.sel");
for (var i = 0; i < menu_radios.length; i++) {
  var contents = document.getElementsByName('tlc5940.disp');
}

// send message
function tlc5940_update() {
  socket.emit('tlc5940 update', {brightness: brightness});
  console.log('tlc5940 update ' + brightness);
}

function brightness_update_from_slider(b) {
  for (var i = 0; i < <%= num_led%> ; i++) {
    brightness[i] = document.getElementById("tlc5940-brightness-" + i).value;
  }
  tlc5940_update();
}

function brightness_update_from_hue(b) {
  var base = 3*document.querySelector('input[name="lednum"]:checked').value;
  for (var i = 0; i < 3 ; i++) {
    brightness[base + i] = b[i];
  }
  tlc5940_update();
}

function init() {
  menu_display_update();
  init_color();
}
</script>

<!DOCTYPE html>
<html>
  <head>
    <meta http-equiv="Pragma" content="no-cache">
    <meta http-equiv="Cache-Control" content="no-cache">
    <meta http-equiv="Expires" content="0">
    <meta content="text/html; charset=EUC-JP">
	<script type="text/javascript" src="color.js" charset="EUC-JP"></script>
    <% if (is_mobile) { %>
    <meta name="viewport" content="width=320, user-scalable=no, initial-scale=1.0, maximum-scale=1.0">
    <% } %>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body onLoad="init();">
    <h1><%= title %></h1>
    <br>

    <input type="radio" name="tlc5940.disp.sel" value="tlc5940.disp.0" id="tlc5940.disp.0" onclick="menu_display_update();" checked>
      <label for="tlc5940.disp.0" style="width: 100px">slider</label>
    </input>
	</input>
    <input type="radio" name="tlc5940.disp.sel" value="tlc5940.disp.1" id="tlc5940.disp.1" onclick="menu_display_update();">
      <label for="tlc5940.disp.1" style="width: 100px">color pad</label>
	</input>
    </input>
    <p />

    <div class="tlc5940.disp" id="tlc5940.disp.0">
      <% for (var i = 0; i < num_led; i++) { %>
        <input id="tlc5940-brightness-<%= i %>" type="range" min="0" max="4095" step="1"
          value="<%= init_val[i]%>" onchange="brightness_update_from_slider()" style="width: 200px"/>
        <br>
        <% if (i % 3 == 2) { %>
          <br>
        <% } %>
      <% } %>
    </div>

    <div class="tlc5940.disp" id="tlc5940.disp.1">
      <% for (var i = 0; i < num_led/3; i++) { %>
        <% if (i == 0) { %>
          <input type="radio" name="lednum" id="lednum<%= i %>" value="<%= i %>" checked>
        <% } else { %>
          <input type="radio" name="lednum" id="lednum<%= i %>" value="<%= i %>">
        <% } %>
		<label for="lednum<%= i %>" style="width: <%= Math.floor((200-num_led/3)/(num_led/3)) %>px"><%= i %></label></input>
      <% } %>
	  <p />
      <div id="color" style="width:100%; height:20px; border: 1px solid black"></div>
      <span id="msg"></span><br />
      <canvas id="canvas" width="200" height="200" style="margin-top: 30px;"></canvas>
    </div>

    <br>
    <hr>
  </body>
</html>
